<VirtualHost *:80>
  SetEnv KOHANA_ENV <%= @params[:kohana_environment] %>
  ServerName <%= @params[:server_name] %>
  ServerAlias <% @params[:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  DocumentRoot <%= @params[:docroot] %>
  RewriteEngine On

  LogLevel debug
  ErrorLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
  CustomLog <%= node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined

  RewriteEngine On
  RewriteLog <%= node[:apache][:log_dir] %>/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0

  SetEnv DB1_HOST localhost
  SetEnv DB1_NAME kohana-modules
  SetEnv DB1_USER kohana-modules
  SetEnv DB1_PASS kohana-modules

  <Directory <%= @params[:docroot] %>>
    php_admin_value upload_tmp_dir /tmp/<%= @params[:server_name] %>
    DirectoryIndex index.php
    RewriteEngine on
    Options +FollowSymlinks
    AllowOverride none
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule .* index.php/$0 [PT]
  </Directory>
</VirtualHost>
